{
    "compilerOptions": {
        "target": "ES6",
        "jsx": "preserve",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist", "client"]
}